<?xml version="1.0" encoding="utf-8"?>
<project name="OpenVV"
		 basedir="."
		 default="compileBeacon">

	<property name="FLEX_HOME" value="/Applications/Adobe Flash Builder 4.7/sdks/4.6.0/"/>

	<property name="BIN_DIR" value="bin" />
	<property name="SRC_DIR" value="src" />
	<property name="ASDOC_DIR" value="asdoc" />

	<taskdef resource="flexTasks.tasks"
			 classpath="${FLEX_HOME}/ant/lib/flexTasks.jar"/>

	<target name="compileBeacon">
		<mxmlc file="src/org/openvv/OVVBeacon.as"
			   output="${BIN_DIR}/OVVBeacon.swf"
			   static-rsls="true">
			<source-path path-element="${SRC_DIR}"/>
		</mxmlc>
	</target>

	<target name="swc">
		<compc output="${BIN_DIR}/openvv.swc"
			   include-classes="org.openvv.OVVAsset org.openvv.OVVCheck org.openvv.OVVRenderMeter org.openvv.OVVThrottleType org.openvv.events.OVVEvent">
			<source-path path-element="${SRC_DIR}"/>
		</compc>
	</target>

	<target name="asdoc">
		<asdoc output="${ASDOC_DIR}" lenient="true" failonerror="true"> 
			<doc-sources path-element="${SRC_DIR}" />
		</asdoc>
	</target>


	<target name="clean">
		<delete dir="${BIN_DIR}" failonerror="false" />
		<delete dir="${ASDOC_DIR}" failonerror="false" />	
	</target>

</project>
